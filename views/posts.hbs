<div class="row">
 <div class="col-md-12">
 <h2>Posts</h2>
 <hr />
 <div class="table-responsive">
            <table class="table">
                <thead>                    
                    <th>Post ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Published</th>                  
                </thead>
                <tbody>
                {{#each posts}}
                <tr>                    
                    <td>{{id}}</td>
                    <td>{{title}}</a></td>
                    <td>{{postDate}}</td>
                    <td>{{category}}</a></td>
                    <td>{{published}}</a></td>
                </tr>
                {{/each}}
                </tbody>
            </table>
         </div>
    </div>
    {{#unless posts}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>